@page
@model CabManagement.Pages.Routes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Route - @Model.Route.RouteId</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Route.RouteId" />
            <div class="form-group">
                <label asp-for="Route.Distance" class="control-label"></label>
                <input asp-for="Route.Distance" class="form-control" />
                <span asp-validation-for="Route.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.CabId" class="control-label"></label>
                <select asp-for="Route.CabId" class="form-control" asp-items="ViewBag.CabId"></select>
                <span asp-validation-for="Route.CabId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.RouteCategory" class="control-label"></label>
                <input asp-for="Route.RouteCategory" class="form-control" />
                <span asp-validation-for="Route.RouteCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.EstimatedTime" class="control-label"></label>
                <input asp-for="Route.EstimatedTime" class="form-control" />
                <span asp-validation-for="Route.EstimatedTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Route.Tolls" /> @Html.DisplayNameFor(model => model.Route.Tolls)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
